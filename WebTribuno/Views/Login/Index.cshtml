@model WebTribuno.Models.UsuarioViewModel
<html>
<head>
    <link href="~/css/LoginSheet.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <form asp-action="Logon" asp-controller="Login" method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Login</h2>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LoginUsuario" class="control-label">Usuário</label>
                <input asp-for="LoginUsuario" class="form-control" />
                <span asp-validation-for="LoginUsuario" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" type="password" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Logon" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="CadastrarUsuario">Cadastar</a>
            </div>
        </div>
    </form>
</body>

@section Scripts {
   @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
 @{
    Layout = null;
}

</html>





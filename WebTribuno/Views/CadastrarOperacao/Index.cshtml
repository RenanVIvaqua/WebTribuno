@model WebTribuno.Models.OperacaoModel
@using WebTribuno.Pages
@{
    ViewData["Title"] = "Index";
}


    <div id="formCadastroOperacao">
        <div class="border p-3 mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row pb-2">
                <h2 class="text-primary">Cadastrar Operação</h2>
                <hr />
            </div>
            <div class="form-group mb-3">
                <label asp-for="NomeOperacao" class="control-label"></label>
                <input asp-for="NomeOperacao" class="form-control" />
                <span asp-validation-for="NomeOperacao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

                 <component type="typeof(GerarParcela)" render-mode="ServerPrerendered" />   
                 
            <div class="form-group mb-3">
                <label asp-for="TipoOperacao" class="control-label"></label>
                <select asp-for="TipoOperacao" class="dropdown-item" asp-items="Html.GetEnumSelectList<TipoOperacao>()"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TipoCalculo" class="control-label"></label>
                <select asp-for="TipoCalculo" class="dropdown-item" asp-items="Html.GetEnumSelectList<TipodeCalculo>()"></select>
            </div>
            <div class="form-group mb-3">
                <input id="btGravar" type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Voltar</a>
            </div>

            <label class="alert">@ViewBag.Gravacao</label>
        </div>
    </div>

    
    
<script src="~/js/CalcularParcela.js" asp-append-version="true"></script>
<script src="CadastrarOperacao/Create" asp-append-version="true" type="javascript"></script>
<script src="controller/action" type="javascript"></script>
<script src="controller/action" asp-append-version="true" type="javascript"></script>
 <script src="_framework/blazor.server.js"></script>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
